<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btn_connect"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textSize="11dp"
                    android:text="Connect"/>
                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Press to connect Pibot" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:background="#FFcccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="bottom" />
                <SeekBar
                    android:id="@+id/seek_bottom"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    android:progress="50"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="right" />
                <SeekBar
                    android:id="@+id/seek_right"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    android:progress="50"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="left" />
                <SeekBar
                    android:id="@+id/seek_left"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    android:progress="50"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="claw" />
                <Switch
                    android:id="@+id/sw_claw"
                    android:layout_marginLeft="8dp"
                    android:layout_width="60dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:background="#FFcccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:text="Enable motion control" />
                <Switch
                    android:id="@+id/sw_motion"
                    android:layout_marginLeft="8dp"
                    android:layout_width="60dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:background="#FFcccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Enable drawing" />
                <Switch
                    android:id="@+id/sw_drawing"
                    android:layout_marginLeft="8dp"
                    android:layout_width="60dp"
                    android:layout_height="20dp" />
                <RadioGroup
                    android:id="@+id/rg_drawing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <RadioButton
                        android:id="@+id/rb_realtime"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:text="Realtime"/>
                    <RadioButton
                        android:id="@+id/rb_once"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:text="Once"/>
                </RadioGroup>
            </LinearLayout>

            <com.dawei.picontrol.DrawingView
                android:id="@+id/drawing_pad"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@layout/border" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:columnOrderPreserved="true"
                android:rowCount="1"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_paint"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:textSize="11dp"
                    android:text="Paint"/>
                <Button
                    android:id="@+id/btn_undo"
                    android:layout_width="55dp"
                    android:layout_height="35dp"
                    android:textSize="11dp"
                    android:text="Undo" />
                <Button
                    android:id="@+id/btn_redo"
                    android:layout_width="55dp"
                    android:layout_height="35dp"
                    android:textSize="11dp"
                    android:text="Redo" />
                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:textSize="11dp"
                    android:text="Clear" />
                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="55dp"
                    android:layout_height="35dp"
                    android:textSize="11dp"
                    android:text="Save" />
                <Button
                    android:id="@+id/btn_fire"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:textSize="11dp"
                    android:text="Fire" />
            </GridLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:background="#FFcccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_message"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Enter data to send" />

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="11dp"
                    android:text="Send" />

            </LinearLayout>
            <TextView
                android:id="@+id/txt_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Received: " />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
